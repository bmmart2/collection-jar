<html lang="en">
  <head>
    <link href="https://getbootstrap.com/docs/4.2/examples/sign-in/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class= "container container--xs">
    <p id="notice"><strong><%= notice %></strong></p>
    <!-- Placeholder image here for future images grabbed
     from database for each specific image -->
    <%= image_tag ("tape.jpg"), :size=> "120x140"%>
    <p>
      <strong>Title:</strong>
      <%= @movie.title %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @movie.year %>
    </p>

    <p>
      <strong>Genre:</strong>
      <%= @movie.genre %>
    </p>

    <%= link_to 'Edit', edit_movie_path(@movie), data: { confirm: 'Are you sure that you want to change this entry?' }  %> |
    <%= link_to 'Back', movies_path %>
  </div>
</body>
</html>
