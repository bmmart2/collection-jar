<!doctype html>
<html lang="en">
  <head>
    <!-- Credit work -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Sign up</title>

    <!-- Bootstrap core CSS -->
<link href="https://getbootstrap.com/docs/4.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    <!-- Custom styles for this template -->
    <link href="https://getbootstrap.com/docs/4.2/examples/sign-in/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class= "container container--xs">
      <%= image_tag ("logo.png"), :size=> "120x140"%>
      <h1 class="h2 mb-4 mt-2 font-weight-normal"><strong>Sign up</strong></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, class:"form-control form-signin", placeholder: "Email address", autofocus: true, autocomplete: "email" %>
        </div>

        <br>

        <div class="field">
          <%=f.text_field :fname, class:"form-control form-signin", placeholder: "First name", autofocus: false, autocomplete: "John" %>
        </div>

        <div class="field">
          <%=f.text_field :lname, class:"form-control form-signin", placeholder: "Last name", autofocus: false, autocomplete:"Doe" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class:"form-control form-signin", placeholder:"Password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class:"form-control form-signin", placeholder:"Confirm Password", autocomplete: "new-password" %>
        </div>

        <br>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-sm btn-primary btn-block form-signin"%>
        </div>

        <br>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
</body>
</html>
