<!doctype html>
<html lang="en">
  <head>
    <link href="https://getbootstrap.com/docs/4.2/examples/sign-in/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class= "container container--xs">
      <%= form_with(model: card, local: true) do |form| %>
        <% if card.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

            <ul>
            <% card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control form-signin" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, class:"form-control form-signin" %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Create Card", class:"btn btn-sm btn-primary btn-block form-signin"%>
  </div>

<% end %>
</div>
</body>
</html>
