<!doctype html>
<html lang="en">
  <head>
    <link href="https://getbootstrap.com/docs/4.2/examples/sign-in/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class= "container container--xs">
      <%= form_with(model: vinyl, local: true) do |form| %>
        <% if vinyl.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(vinyl.errors.count, "error") %> prohibited this vinyl from being saved:</h2>

            <ul>
            <% vinyl.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :title%>
          <%= form.text_field :title, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :artist %>
          <%= form.text_field :artist, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :year %>
          <%= form.number_field :year, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :condition %>
          <%= form.number_field :condition, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :label %>
          <%= form.text_field :label, class:"form-control form-signin" %>
        </div>

        <br>

        <div class="actions">
          <%= form.submit "Create Vinyl", class:"btn btn-sm btn-primary btn-block form-signin"%>
        </div>

      <% end %>
    </div>
</body>
</html>
