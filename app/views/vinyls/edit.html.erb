<!-- Render for the editing the vinyls page -->
<body class="text-center">
  <div class= "container container--xs">
    <%= image_tag ("videogame2.png"), :size=> "120x140"%>
    <h1 class="h2 mt-2 font-weight-normal"><strong>Editing Vinyl</strong></h1>
    <%= render 'form', vinyl: @vinyl %>
    <%= link_to 'Show', @vinyl, data: { confirm: 'Are you sure? Unsaved changes may be lost!' }%> |
    <%= link_to 'Back', vinyls_path, data: { confirm: 'Are you sure? Unsaved changes may be lost' } %>
  </div>
</body>
