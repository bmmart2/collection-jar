<!doctype html>
<html lang="en">
  <head>
    <link href="https://getbootstrap.com/docs/4.2/examples/sign-in/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <div class= "container container--xs">
      <%= form_with(model: videogame, local: true) do |form| %>
        <% if videogame.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(videogame.errors.count, "error") %> prohibited this videogame from being saved:</h2>

            <ul>
            <% videogame.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :title%>
          <%= form.text_field :title, class:"form-control form-signin", value: params[:title] %>
        </div>

        <div class="field">
          <%= form.label :publisher %>
          <%= form.text_field :publisher, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :genre %>
          <%= form.text_field :genre, class:"form-control form-signin", value: params[:genre] %>
        </div>

        <div class="field">
          <%= form.label :platform %>
          <%= form.text_field :platform, class:"form-control form-signin" %>
        </div>

        <div class="field">
          <%= form.label :year %>
          <%= form.number_field :year, class:"form-control form-signin", value: params[:date] %>
        </div>

        <div class="field">
          <%= form.label :condition %>
          <%= form.number_field :condition, class:"form-control form-signin" %>
        </div>


        <br>

        <div class="actions">
          <%= form.submit "Create Video Game", class:"btn btn-sm btn-primary btn-block form-signin"%>
        </div>

      <% end %>
    </div>
</body>
</html>
