<!doctype html>
<html lang="en">
  <head>
    <!-- Credit work -->
    <meta charset="utf-8">
    <title>Video Game Collection</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <style>
    table th {
      text-align: center;
    }
    table td {
      text-align: center;
    }
    #filter {
      text-align: center;
      font-weight: bold;
    }
    .form-control {
      width: 550px;
    }
    .table-bordered thead th, .table-bordered thead td {
      background-color: #4065ba;
    }
    .table-bordered th, .table-bordered td {
      border: 1px solid #f2f2f2;
    }
    .table thead th {
      vertical-align: bottom;
      border-bottom: 2px solid #fff;
      color: white;
    }
    .btn-edit {
      color: #fff;
      background-color: #2db039;
      border-color: #2db039;
    }
    .jumbotron {
      padding: 2rem 1rem;
      margin-bottom: 2rem;
      background-color: #ffffff;
      border-radius: 0.3rem;
    }
    .table tbody td {
      color: #1d439b;
    }
    a {
    color: #ffffff;
    text-decoration: none;
    background-color: transparent;
    }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">
        <%= image_tag ("logo.png"), :size=> "55x65"%>
      </a>
      <a class="navbar-brand" href="/">Wishlist</a>

      <!-- Spacing -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        </ul>
      </div>

      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown py-0 px-md-5">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello, <%= current_user.fname %>!
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </div>
          </li>
        </ul>

      </nav>
      <section class="jumbotron">
        <div class="container">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th><div class="col">Name</div></th>
                <th><div class="col">Item Type</div></th>
                <th><div class="col">Notes</div></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody id="myTable">
              <% @wishlists.each do |wl| %>
              <tr>
                <td><div class="col"><%= wl.name %></div></td>
                <td><div class="col"><%= wl.item_type %></div></td>
                <td><div class="col"><%= wl.other %></div></td>
                <td><div class="col"><a class="btn btn-collection btn-sm"<%= link_to 'Show', wl %></a></div></td>
                <td><div class="col"><a class="btn btn-edit btn-sm"<%= link_to 'Edit', edit_wishlist_path(wl) %></a></div></td>
                <td><div class="col"><a class="btn btn-danger btn-sm"<%= link_to 'Delete', wl, method: :delete, data: { confirm: 'Are you sure that you want to delete this entry?' } %></a></div></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class= "container container--xs">
          <a class="btn btn-primary my-2"<%= link_to 'Add to wishlist', new_wishlist_path %></a>
        </div>
      </section>
    </body>
    <footer class="text-center">
    </footer>
  </html>
